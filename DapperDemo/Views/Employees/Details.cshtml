@model DapperDemo.Models.Employee

<div class="container">
    <div class="row">
        <div class="col-9">
            <h1>Employee Details</h1>

        </div>
        <div class="col-3">
            <a asp-action="Index" asp-controller="Employees" class="btn btn-warning">Back to Employees</a>
        </div>
    </div>
    <hr />

    <div class="row p-1">
        <div class="col-3">
            Name
        </div>
        <div class="col-9">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-3">
            Email
        </div>
        <div class="col-9">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>

    <div class="row p-1">
        <div class="col-3">
            Phone
        </div>
        <div class="col-9">
            <input asp-for="Phone" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            Title
        </div>
        <div class="col-9">
            <input asp-for="Title" class="form-control" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-3">
            Company
        </div>
        <div class="col-9">
            <input asp-for="Company.Name" class="form-control" />
        </div>
    </div>
</div>
